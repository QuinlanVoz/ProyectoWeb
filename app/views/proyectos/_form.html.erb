<%= form_with(model: proyecto, local: true) do |form| %>
  <% if proyecto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proyecto.errors.count, "error") %> No se puede finalizar el registro debido a los siguientes motivos:</h2>

      <ul>
        <% proyecto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br>
<div class="row">
  <div class="col-6">
    <div class="field">
      <%= form.label :nombre %>
      <%= form.text_field :nombre , { :class => "form-control" } %>
    </div>
   <br>
    <div class="field">
      <%= form.label :ubicacion %>
      <%= form.text_field :ubicacion , { :class => "form-control" } %>
    </div>
  <br>
    <div class="field">
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad , { :class => "form-control" } %>
  </div>
 <br>
  <div class="form-group">
    <%= form.label :fotos %>
      <div class="input-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="proyectoimg" aria-describedby="proyectoimgAddon">
          <label class="custom-file-label" for="proyectoimg">Seleccionar Imagen</label>
        </div>
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button" id="proyectoimgAddon">:)</button>
        </div>
      </div>
  </div>
 </div>

<br>

<br>
  <div class="col-6">
  <div class="field">
    <%= form.label :caracteristicas %>
    <%= form.text_area :caracteristicas , { :class => "form-control", :rows =>"12" } %>
  </div>
   </div>
<br>
  
</div>
<br>
  <div class="actions">
    <%= form.submit "Guardar", :class => "btn btn-outline-primary" %>
  </div>
<% end %>

<hr>



  