<h3 class="p-3 mb-2 bg-dark text-white">REPORTE DE USUARIOS:</h3>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Dni</th>
      <th>Nombres y Apellidos </th>
      <th>Perfil</th>
      <th>Estado</th>
      <th>Contrase√±a</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.dni %></td>
        <td><%= usuario.nomAp %></td>
        <td><%= usuario.perfil %></td>
        <td><%= usuario.estado %></td>
        <td><%= usuario.contrasena %></td>
