<p id="notice"><%= notice %></p>

<h1>Citas con los clientes</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr class="bg-primary">
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Dni</th>
      <th>Telefono</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.codigo %></td>
        <td><%= citum.nombre %></td>
        <td><%= citum.apellido %></td>
        <td><%= citum.dni %></td>
        <td><%= citum.telefono %></td>
        <td><%= citum.fecha %></td>
        <td><%= citum.hora %></td>
        <td><%= citum.estado %></td>
        <td><%= link_to 'Mostrar', citum, :class => "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_citum_path(citum), :class => "btn btn-outline-warning btn-sm"%></td>
        <td><%= link_to 'Eliminar', citum, :class=> "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Confirmar eliminacion de cita' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

